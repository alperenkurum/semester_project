<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"

    tools:context=".PersonalInfo">



    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:cardCornerRadius="300dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="20dp"

                >
                <ImageView
                    android:id="@+id/pp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/pp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp"
                android:background="@drawable/custom_edittext"
                android:outlineSpotShadowColor="@color/blue">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:padding="10dp"
                        android:id="@+id/AccountType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Account Type"
                        android:background="@color/white"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:textSize="30dp"
                        android:textStyle="bold" />
                </LinearLayout>
        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:background="@drawable/custom_edittext"
            android:outlineSpotShadowColor="@color/blue"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="24dp">
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_person_24">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:drawablePadding="8dp"/>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:drawablePadding="8dp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/cardview_dark_background"
                    android:textSize="18sp"
                    android:textColorHint="#99000000" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_person_24">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Surname: "
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:drawableLeft="@drawable/baseline_person_24"
                        android:drawablePadding="8dp"/>
                    <TextView
                        android:textSize="18sp"

                        android:id="@+id/surname"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawablePadding="8dp"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="#99000000" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/baseline_person_24">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="School No: "
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:drawableLeft="@drawable/baseline_person_24"
                        android:drawablePadding="8dp"/>
                    <TextView
                        android:id="@+id/schoolNO"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawablePadding="8dp"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textSize="18sp"
                        android:textColorHint="#99000000" />
                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:background="@drawable/custom_edittext"
            android:outlineSpotShadowColor="@color/blue"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="24dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="School Name: "
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:drawableLeft="@drawable/baseline_person_24"
                        android:drawablePadding="8dp"
                        />

                    <TextView
                        android:id="@+id/name_school"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawablePadding="8dp"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="#99000000" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="4dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Department: "
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:drawableLeft="@drawable/baseline_person_24"
                        android:drawablePadding="8dp"
                        />
                    <TextView
                        android:id="@+id/departmant"

                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="18sp"
                        android:drawablePadding="8dp"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:textColorHint="#99000000" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="4dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semester: "
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:drawableLeft="@drawable/baseline_menu_book_24"
                        android:drawablePadding="8dp"
                        />

                    <Spinner
                        android:id="@+id/Semester"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                         />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"

                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="4dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Educational Info: "
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:drawableLeft="@drawable/baseline_menu_book_24"
                        android:drawablePadding="8dp"
                        />

                    <Spinner
                        android:id="@+id/Education"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#00FFFFFF"
                        />

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp"
                android:background="@drawable/custom_edittext"
                android:outlineSpotShadowColor="@color/blue"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="24dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/email_image"
                            android:layout_width="41dp"
                            android:layout_height="41dp"
                            android:background="@drawable/email_24"
                            android:layout_marginRight="10dp"
                            >

                        </ImageView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_edittext"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/email"
                                android:layout_width="166dp"
                                android:layout_height="40dp"
                                android:drawablePadding="8dp"
                                android:layout_marginLeft="10dp"
                                android:hint="E-mail Address"
                                android:textColorHighlight="@color/cardview_dark_background"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="#99000000"
                                android:textSize="17dp" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/email_switch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:showText="false"  />
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        >

                        <ImageView
                            android:id="@+id/ig_image"
                            android:layout_width="41dp"
                            android:layout_height="41dp"
                            android:background="@drawable/instagram"
                            android:layout_marginRight="10dp"
                            >

                        </ImageView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_edittext"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/Instagram_link"
                                android:layout_width="166dp"
                                android:layout_height="40dp"
                                android:drawablePadding="8dp"
                                android:layout_marginLeft="10dp"
                                android:hint="Instagram Account"
                                android:textColorHighlight="@color/cardview_dark_background"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="#99000000"
                                android:textSize="17dp" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/ig_switch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:showText="false"  />
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        >

                        <ImageView
                            android:id="@+id/wp_image"
                            android:layout_width="41dp"
                            android:layout_height="41dp"
                            android:background="@drawable/whatsapp"
                            android:layout_marginRight="10dp"
                            >

                        </ImageView>
                        <ImageView
                            android:id="@+id/phone_image"
                            android:layout_width="41dp"
                            android:layout_height="41dp"
                            android:background="@drawable/baseline_local_phone_24"
                            android:layout_marginRight="10dp"
                            >

                        </ImageView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_edittext"
                            android:orientation="horizontal"

                            >

                            <TextView
                                android:id="@+id/phoneNo"
                                android:layout_width="140dp"
                                android:layout_height="40dp"
                                android:drawablePadding="8dp"
                                android:layout_marginLeft="10dp"
                                android:hint="Phone No"
                                android:background="#00FFFFFF"
                                android:textColorHighlight="@color/cardview_dark_background"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="#99000000"
                                android:textSize="17dp" />
                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/phone_switch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:showText="false" />
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        >

                        <ImageView
                            android:id="@+id/x_image"
                            android:layout_width="41dp"
                            android:layout_height="41dp"
                            android:background="@drawable/twitter"
                            android:layout_marginRight="10dp"
                            >

                        </ImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_edittext"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/Twitter_link"
                                android:layout_width="166dp"
                                android:layout_height="40dp"
                                android:drawablePadding="8dp"
                                android:layout_marginLeft="10dp"
                                android:hint="Twitter Account"
                                android:textColorHighlight="@color/cardview_dark_background"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="#99000000"
                                android:textSize="17dp" />
                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/x_switch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:showText="false"  />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"

                >
                <Button
                    android:id="@+id/BackButton"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"

                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#4A9C5E"
                    android:text="Back"
                    android:textColor="@color/white" />
                <View
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">
                </View>

                <Button
                    android:id="@+id/EditButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:text="Edit"
                    android:textColor="@color/white"
                    android:backgroundTint="#93ACF4" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>